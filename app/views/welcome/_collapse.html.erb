<!-- ng-if user is logged in -->

<div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne" ng-if="userLoggedIn">
  <div class="panel-body collapse-container">
    <!-- ... -->
    <div class="container">

      <div class="row">
        <div class="col-xs-6 category-container panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">All Categories</h3>
          </div>
          <div class="panel-body">
            <div ng-repeat="category in allCategories" class="category-name checkbox btn-group">
              <button type="button" class="btn btn-warning" aria-label="Left Align" ng-click="addCategory(category, $index)">
                <div>{{category.category_name }} <i class="fa fa-check-circle fa-lg"></i></div>
              </button>
            </div>
          </div>
        </div>

        <div class="col-xs-6 category-container panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Selected Categories</h3>
            <div class="btn-group btn-group-xs">
              <button type="button" class="btn btn-danger" aria-label="Left Align" ng-click="userSubmit()" data-toggle="collapse">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                SAVE
              </button>
            </div>
          </div>
          <div class="panel-body">
            <div ng-repeat="category in userCategories" class="category-name checkbox btn-group">
              <button type="button" class="btn btn-success" aria-label="Left Align" ng-click="removeCategory(category, $index)">
                <div>{{category.category_name }} <i class="fa fa-times-circle fa-lg"></i></div>
              </button>
            </div>
          </div>
        </div>

      </div>
    </div>


    <!-- ... -->
  </div>
</div>

<!-- ng-if user is not logged in -->

<div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne" ng-if="!userLoggedIn">
  <div class="panel-body collapse-container">
    <!-- ... -->
    <div class="container">

      <div class="row">
        <div class="col-xs-6 col-xs-offset-3">

          <div class="panel panel-primary user-logout">

            <div class="panel-heading">
              <h3 class="panel-title user-logout">Welcome to <i class='fa fa-newspaper-o fa-lg'></i> READABLE!</h3>
            </div>

            <div class="panel-body user-logout">
              <br>
              <br>
              <br>
              <p>Sign in here using your
              <span class="label label-default"><%= link_to raw("<i class='fa fa-facebook-square fa-lg'></i> Facebook"), "/auth/facebook", id: "sign_in" %></span></p>
              <br>
              <br>
              <br>
              <button class="reject"><a data-toggle="collapse" href="#collapseOne">or continue without signing in</a></button>
            </div>
          </div>

        </div>
      </div>

    <!-- ... -->
  </div>
</div>
